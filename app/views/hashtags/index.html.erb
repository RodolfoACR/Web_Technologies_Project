<h1 class="text-center mb-4">Hashtags</h1>

<div class="container">
  <ul class="list-group">
    <% @hashtags.each do |hashtag| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        #<%= hashtag.tag %>
        <%= link_to "View", hashtag_path(hashtag), class: "btn btn-primary btn-sm" %>
      </li>
    <% end %>
  </ul>
</div>
