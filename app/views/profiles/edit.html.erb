<div class="container">
  <h1>Edit Profile</h1>

  <%= form_with model: @profile, local: true do |f| %>
    <% if @profile.errors.any? %>
      <div class="alert alert-danger">
        <h4>Errors:</h4>
        <ul>
          <% @profile.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :username %>
      <%= f.text_field :username, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :bio %>
      <%= f.text_area :bio, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :avatar_url %>
      <%= f.text_field :avatar_url, class: "form-control" %>
    </div>

    <%= f.submit "Update Profile", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back", profile_path(@profile), class: "btn btn-secondary mt-3" %>
</div>