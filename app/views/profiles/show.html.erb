<div class="container">
  <div class="row">
    <div class="col-sm-2" style="text-align: center; padding-top: 20px;">
      <img src="<%= @profile.avatar_url %>" alt="Avatar" width="150" class="mb-3" style="border-radius: 50%; border: 2px solid #ccc;">
    </div>
    <div class="col-sm-10">
      <h1 class="mb-4">@<%= @profile.username %></h1>
      <p><strong>Bio:</strong> <%= @profile.bio %></p>
      <p><strong>Followers:</strong> <%= @followers.count %></p>
      <p><strong>Following:</strong> <%= @following.count %></p>
  </div>
</div>
<div class="container">
  <h3>Posts by @<%= @profile.username %></h3>
  <hr>
</div>
<div class="container">
  <ul>
    <% @posts.each do |post| %>
      <li>
        <%= image_tag post.image_url, width: 150 %><br>
        <%= post.description %><br>
        <%= link_to "View Post", post_path(post), class: "btn btn-sm btn-outline-primary" %>
      </li>
    <% end %>
  </ul>
  <hr>
</div>
<div class="container">
  <h3>Followers</h3>
  <hr>
  <ul>
    <% @followers.each do |follower| %>
      <li>
        @<%= link_to follower.username, profile_path(follower) %>
      </li>
    <% end %>
  </ul>
<div class="container">
  <h4>Following</h4>
  <ul>
    <% @following.each do |followed| %>
      <li>
        @<%= link_to followed.username, profile_path(followed) %>
      </li>
    <% end %>
  </ul>
</div>
<div class="container">
  <%= link_to "Back to all profiles", profiles_path, class: "btn btn-secondary mt-3" %>
</div>