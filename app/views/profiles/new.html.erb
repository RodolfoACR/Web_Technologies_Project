<h1>Create New Profile</h1>

<%= form_with model: @profile, local: true do |f| %>
  <% if @profile.errors.any? %>
    <div class="alert alert-danger">
      <h4>There were some problems with your submission:</h4>
      <ul>
        <% @profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :bio %>
    <%= f.text_area :bio, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :avatar_url %>
    <%= f.text_field :avatar_url, class: "form-control" %>
  </div>

  <%= f.submit "Create Profile", class: "btn btn-success" %>
<% end %>

<%= link_to "Back to profiles", profiles_path, class: "btn btn-secondary mt-3" %>
