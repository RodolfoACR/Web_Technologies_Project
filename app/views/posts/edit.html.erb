<div class="container">
  <h2 class="mb-4">Edit Post</h2>
    <% if @post.errors.any? %>
        <div class="alert alert-danger">
            <h5>There were problems with your submission:</h5>
            <ul>
            <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

  <%= form_with model: [@profile, @post], local: true do |form| %>
    <div class="mb-3">
      <%= form.label :image_url, "Image URL", class: "form-label" %>
      <%= form.text_field :image_url, class: "form-control", placeholder: "https://example.com/image.jpg" %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, rows: 4, class: "form-control", placeholder: "Describe your post..." %>
    </div>

    <div class="mb-3">
      <%= form.label :hashtag_list, "Hashtags (comma separated)", class: "form-label" %>
      <%= text_field_tag :hashtag_list, '', class: "form-control", placeholder: "e.g. travel, food, tech" %>
    </div>


    <div class="text-end">
      <%= form.submit "Edit Post", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
