<div class="container">
  <h2 class="mb-4">Create a New Post</h2>
    <% if @post.errors.any? %>
        <div class="alert alert-danger">
            <h5>There were problems with your submission:</h5>
            <ul>
            <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

  <%= form_with model: [@profile, @post], local: true do |form| %>
    <div class="mb-3">
      <%= form.label :image_url, "Image URL", class: "form-label" %>
      <%= form.text_field :image_url, class: "form-control", placeholder: "https://example.com/image.jpg" %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, rows: 4, class: "form-control", placeholder: "Describe your post..." %>
    </div>

    <div class="mb-3">
        <%= form.label :hashtags, "Select Existing Hashtags", class: "form-label" %>
        <%= select_tag 'hashtags[]',
                options_from_collection_for_select(Hashtag.all, :id, :tag),
                multiple: true, class: "form-select" %>
    </div>

    <div class="text-end">
      <%= form.submit "Create Post", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
