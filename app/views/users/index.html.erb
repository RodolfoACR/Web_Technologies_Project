<div class="container">
  <h1>
    Users <small class="lead">Welcome to the users page! Here you can view all registered users.</small>
  </h1>
</div>
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Email</th>
        <th scope="col">Username</th>
        <th scope="col">View</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr style="vertical-align: middle;">
          <th scope="row"><%= user.id %></th>
          <td><%= user.email %></td>
          <td>
            <% if user.profile.present? %>
              <%= user.profile.username %>
            <% else %>
              <em>No profile</em>
            <% end %>
          </td>
          <td><%= link_to "Show", user_path(user), class: "btn btn-sm btn-outline-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
